@model ClinicManagementSystem.EF.Employee

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="~/admin" class="brand-link">
        <img src="~/Asset/dist/img/AdminLTELogo.png" alt="" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Clinic Management</span>
    </a>

    <div class="sidebar">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="@Url.Content(Model.Avatar)" class="img-circle elevation-2" alt="User Image" />
            </div>
            <div class="info">
                <a href="~/admin/profile" class="d-block">@Model.FullName</a>
            </div>
        </div>


        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item menu-open">
                    <a href="~/Admin/Home" class="nav-link">
                        <img src="~/public/icons/icons8-dashboard-30.png" />
                        <p>Dashboard</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <img src="~/public/icons/icons8-doctors-bag-30.png" />
                        <p>
                            Manage Medicines
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="~/Admin/Medicines" class="nav-link">
                                <img src="~/public/icons/icons8-pill-30.png" />
                                <p>Medicines</p>
                            </a>
                        </li>

                        @if (Model.Position == 1)
                        {
                            <li class="nav-item">
                                <a href="~/Admin/MedicineTypes" class="nav-link">
                                    <img src="~/public/icons/icons8-pharmacy-30.png" />
                                    <p>Medicine Types</p>
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a href="~/Admin/MedicineFeedbacks" class="nav-link">
                                <img src="~/public/icons/icons8-messaging-30.png" />
                                <p>Feedbacks</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <img src="~/public/icons/icons8-sell-stock-30.png" />
                        <p>
                            Manage Apparatus
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="~/Admin/ScientificApparatus" class="nav-link">
                                <img src="~/public/icons/icons8-product-30.png" />
                                <p>Scientific Apparatus</p>
                            </a>
                        </li>
                        @if (Model.Position == 1)
                        {
                            <li class="nav-item">
                                <a href="~/Admin/ScientificApparatusTypes" class="nav-link">
                                    <img src="~/public/icons/icons8-commodity-30.png" />
                                    <p>Scientific Apparatus Types</p>
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a href="~/Admin/ScientificApparatusFeedbacks" class="nav-link">
                                <img src="~/public/icons/icons8-messaging-30.png" />
                                <p>Feedbacks</p>
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a href="~/Admin/Customers/" class="nav-link">
                        <img src="~/public/icons/icons8-customer-30.png" />
                        <p>Manage Customers</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="~/Admin/Orders/" class="nav-link">
                        <img src="~/public/icons/icons8-cash-register-euro-30.png" />

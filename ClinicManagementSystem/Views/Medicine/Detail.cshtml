@model ClinicManagementSystem.EF.Medicine
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imageList = (List<ClinicManagementSystem.EF.MedicineImage>)ViewBag.MedicineImages;
    var feedbacks = (List<ClinicManagementSystem.EF.MedicineFeedback>)ViewBag.MedicineFeedbacks;
}

<div class="product_image_area section-padding40">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-5">
                <div class="product_slider_img">
                    <div id="vertical">
                        @foreach (var item in imageList)
                        {
                            <div data-thumb="@Url.Content(item.FileName)">
                                <img src="@Url.Content(item.FileName)" class="w-100">
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    <h3>@Model.MedicineName</h3>
                    <h2>$@Model.UnitPrice</h2>
                    <ul class="list">
                        <li>
                            <a class="active" href="#">
                                <span>Type</span> : @Model.MedicineType.TypeName
                            </a>
                        </li>
                        <li>
                            <a class="active" href="#">
                                <span>Supplier</span> : @Model.Supplier.CompanyName
                            </a>
                        </li>
                        <li>

                            @if (Model.UnitInStock > 0)
                            {
                                <a href="#"> <span>Availibility</span> : In Stock</a>
                            }
                            else
                            {
                                <a href="#"> <span>Availibility</span> : Out of Stock</a>
                            }
                        </li>
                    </ul>
                    <p>
                        @Model.ShortDescription
                    </p>
                    <div class="card_area">
                        <div class="product_count d-inline-block">
                            <span class="inumber-decrement"> <i class="ti-minus"></i></span>
                            <input class="input-number" id="txtQty" type="text" value="1" min="1" max="1000">
                            <span class="number-increment"> <i class="ti-plus"></i></span>
                        </div>
                        <div class="add_to_cart">
                            <a style="cursor:pointer" class="btn">add to cart</a>
                            <a href="#" class="like_us"> <i class="ti-heart"></i> </a>
                        </div>
                        <div class="social_icon">
                            <a href="#" class="fb"><i class="ti-facebook"></i></a>
                            <a href="#" class="tw"><i class="ti-twitter-alt"></i></a>
                            <a href="#" class="li"><i class="ti-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="product_description_area">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                   aria-selected="true">Usage</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                   aria-selected="false">Composition</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact"
                   aria-selected="false">Comments</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade" id="home" role="tabpanel" aria-labelledby="home-tab">
                @Html.Raw(Model.Usage)
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                @Html.Raw(Model.Composition)
            </div>
            <div class="tab-pane fade show active" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="comment_list">
                            @foreach (var item in feedbacks)
                            {
                                <div class="review_item">
                                    <div class="media">
                                        <div class="d-flex">
                                            <img style="border-radius: 50%;" width="70" src="@Url.Content(item.Customer.Avatar)" alt="" />
                                        </div>
                                        <div class="media-body">
                                            <h4>@item.Customer.FullName</h4>
                                            <h5>@item.CreatedDate</h5>
                                        </div>
                                    </div>
                                    <p>
                                        @item.Content
                                    </p>
                                </div>
                            }


                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="review_box">
                            <h4>Post a comment</h4>
                            <form class="row contact_form" action="contact_process.php" method="post" id="contactForm"
                                  novalidate="novalidate">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="name" name="name" placeholder="Your Full name" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="number" name="number" placeholder="Phone Number" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <textarea class="form-control" name="message" id="message" rows="1"
                                                  placeholder="Message"></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12 text-right">
                                    <button type="submit" value="submit" class="btn">
                                        Submit Now
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

@section ClientScript
{
    <script>

        $(document).ready(function () {
            $(".btn").click(function () {
                var qty = $("#txtQty").val();
                window.location = "/add-to-cart?productID=@Model.MedicineID&quantity=" + qty;
            });
        });

    </script>

}